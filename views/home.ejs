<html>
    <head>
        <title> TODO </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous"> 
        <link href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/ui-lightness/jquery-ui.css'rel='stylesheet'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/style.css">

        <script src="https://kit.fontawesome.com/c8aa6d6665.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js" ></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js" ></script>
    </head>
    <body>
  
        <h3><i class="fas fa-clipboard-list"></i></i>Todo List</h3>

        <form action="/add_task"  method="POST">
            <div class="container p-3">
                <div class = "col-12 mt-2 p-2">
                    <h4>Description</h4>
                    <input class = "form-control input-lg border-0"type="text" name="description" required> 
                </div>
                <div class="row mt-1 mb-4 p-2">
                    <div class = "col-6">
                        <h5>Category:</h5>
                        <select class = "border-0 w-100 h-75" id="Category" name="Category" required>
                            <option value="Personal">Personal</option>
                            <option value="Work">Work</option>
                            <option value="School">School</option>
                            <option value="Cleaning">Cleaning</option>
                            <option value="Other">Other</option>
                          </select>
                    </div>
                    <div class = "col-6">
                        <h5>Date</h5>
                        <input class ="border-0 w-100 h-75"  name="date" type="text" id="my_date_picker" placeholder="dd-mm-yy" >
                    </div>
                </div>
            </div> 
            <div id="button-block">
                <button class="btn btn-success btn-lg " id="addButton" type="submit"><i class="fas fa-plus"></i>&nbsp; Add Task</button>
            </div>
        </form>
       <form  action="/remove"  method="POST">
            <div id="button-block">
                <button class="btn btn-danger btn-lg" name = "remove"  id = "remove" type="submit"> <i class="far fa-trash-alt"></i>&nbsp; Remove Task</button>
            </div>

            <div id="block">
            
                <% for(let v of todo_list)
                    {%>
                        <div class= "container m-1">
                            <div class = "row">
                                <div class="col-1"> 
                                    <input class="form-check-input" id="<%=v._id%>" type="checkbox" name="checkbox" value="<%=v._id%>">
                                </div>
                                <div class="col-8">
                                    <div class="description"><%= v.description %></div>
                                    <div class="date"><i class="far fa-calendar-alt"></i>&nbsp; &nbsp;<%= v.date %></div> 
                                </div>        
                                <div class="col-3">
                                    <span class="category"><%= v.Category %></span>
                                </div>     
                            </div>            
                        </div>
                    <%}
                %>
            </div>
        </form>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
        <script src="/js/script1.js"></script>
    </body>
</html>

